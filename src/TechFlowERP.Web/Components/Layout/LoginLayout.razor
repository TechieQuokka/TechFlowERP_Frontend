@code {
    private readonly MudTheme _loginTheme = new()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#1976d2",
            Secondary = "#424242",
            Background = "#f5f5f5",
            Surface = "#ffffff",
            Success = "#4caf50",
            Warning = "#ff9800",
            Error = "#f44336",
            Info = "#2196f3"
        }
    };
}